# VDock Backend Environment Configuration
# Copy this file to .env and configure for your environment

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-to-random-string
DEBUG=False

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Security Configuration
# IMPORTANT: Set a strong password! Minimum 12 characters recommended
REQUIRE_AUTH=True
AUTH_PASSWORD=ChangeThisToAStrongPassword123!
TOKEN_EXPIRATION=86400

# Rate Limiting (DoS Protection)
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200 per day, 50 per hour

# Network Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOW_LAN=False

# SSL/TLS Configuration
USE_SSL=False
SSL_CERT_PATH=cert.pem
SSL_KEY_PATH=key.pem

# Weather API Integration
# Get your free API key from https://www.weatherapi.com/
# Default demo key provided for immediate functionality (limited usage)
# For production use, replace with your own API key
WEATHERAPI_KEY=demo-key-replace-with-your-own

# Spotify Integration (Optional)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback
SPOTIFY_SCOPE=user-read-playback-state,user-modify-playback-state,user-read-currently-playing

# Data Storage
DATA_DIR=data

# Plugin Configuration
ENABLE_PLUGINS=True

# Command Execution Security
# WARNING: Enable with caution! Only allows predefined safe commands
ALLOW_COMMAND_EXECUTION=False
REQUIRE_COMMAND_CONFIRMATION=True

  "description": "Essential controls to get you started",
  "icon": "fa-home",
  "color": "#667eea",
  "category": "essentials",
  "version": "1.0",
  "author": "VDock Team",
  "pages": [
    {
      "id": "page-essentials",
      "name": "Essential Controls",
      "grid_config": {
        "rows": 4,
        "cols": 5
      },
      "buttons": [
        {
          "id": "btn-media-play-pause",
          "label": "Play/Pause",
          "icon": ["fas", "play"],
          "icon_type": "fontawesome",
          "position": { "row": 0, "col": 0 },
          "size": { "rows": 1, "cols": 1 },
          "shape": "rounded",
          "style": {
            "backgroundColor": "#3498db",
            "textColor": "#ffffff"
          },
          "tooltip": "Play or pause media",
          "enabled": true,
          "action": {
            "type": "cross_platform",
            "config": { "action": "media_play_pause" }
          }
        },
        {
          "id": "btn-media-previous",
          "label": "Previous",
          "icon": ["fas", "backward"],
          "icon_type": "fontawesome",
          "position": { "row": 0, "col": 1 },
          "size": { "rows": 1, "cols": 1 },
          "shape": "rounded",
          "style": {
            "backgroundColor": "#3498db",
            "textColor": "#ffffff"

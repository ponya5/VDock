{
  "name": "vdock-electron",
  "version": "1.0.0",
  "description": "VDock - Virtual Stream Deck Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development npx electron .",
    "build": "npx electron-builder",
    "build-win": "npx electron-builder --win",
    "build-all": "npx electron-builder --win --mac --linux",
    "dist": "npm run build && npx electron-builder"
  },
  "build": {
    "appId": "com.vdock.app",
    "productName": "VDock",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "../dist/**/*",
      "../public/**/*",
      "../../backend/**/*",
      "!../../backend/venv/**/*",
      "!../../backend/__pycache__/**/*",
      "!../../backend/data/uploads/**/*"
    ],
    "extraResources": [
      {
        "from": "../../backend",
        "to": "backend",
        "filter": [
          "!venv/**/*",
          "!__pycache__/**/*",
          "!data/uploads/**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../public/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "../public/icon.ico",
      "uninstallerIcon": "../public/icon.ico",
      "installerHeaderIcon": "../public/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Productivity",
      "shortcutName": "VDock"
    },
    "portable": {
      "artifactName": "VDock-Portable.exe"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
